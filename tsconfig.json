{
  "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "target": "ES2020",
      "sourceMap": true,
      "lib": ["es6", "DOM"],
      "outDir": "./lib",
      "typeRoots": ["./node_modules"],
      "types": ["webdriverio"]
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ],
  "webdriverio": {
    "capabilities": {
      "goog:chromeOptions": {
        "args": [
          "--disable-popup-blocking",
          "--disable-notifications"
        ]
      }
    }
  }
}
